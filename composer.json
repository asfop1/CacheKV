{
    "name": "asfop/cache-kv",
    "description": "CacheKV - 专注于简化缓存操作的 PHP 库，核心功能是实现若无则从数据源获取并回填缓存这一常见模式",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "cache",
        "caching",
        "redis",
        "performance",
        "key-value",
        "batch",
        "template",
        "tag"
    ],
    "homepage": "https://github.com/asfop1/CacheKV",
    "authors": [
        {
            "name": "ASFOP",
            "email": "asfop@example.com",
            "homepage": "https://github.com/asfop1"
        }
    ],
    "require": {
        "php": "^7.0 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5 || ^9.0 || ^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^4.0 || ^7.3"
    },
    "suggest": {
        "predis/predis": "Required for Redis driver support using Predis client",
        "ext-redis": "Alternative Redis driver using PhpRedis extension"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Asfop\\CacheKV\\": "src/"
        },
        "files": [
            "src/CacheKVServiceProvider.php",
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Asfop\\CacheKV\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "benchmark": "php benchmark.php",
        "example": "php example_constants.php",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
